<UserControl x:Class="DSLRNet.UserControls.ItemLotSettingsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DSLRNet.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Left half for general settings -->

        <StackPanel Grid.Column="0">
            <GroupBox Header="Item Drops">
                <StackPanel  Margin="5">
                    <TextBlock Text="Global drop chance for items dropped by enemies (excluding bosses). (1-100%)" />
                    <local:SliderWithTextUserControl Minimum="5" Maximum="100" Value="{Binding GlobalDropChance, Mode=TwoWay}" 
                                                     TickFrequency="1" 
                                                     IsSnapToTickEnabled="True" 
                                                     IsEnabled="{Binding AllLootGauranteed, Converter={StaticResource InverseBooleanConverter}}" />

                    <StackPanel Margin="0,0,0,10">
                        <CheckBox Content="Chaos Loot Enabled" IsChecked="{Binding ChaosLootEnabled, Mode=TwoWay}" />
                        <TextBlock Text="Enable or disable chaos loot. Any rarity of any type can drop anywhere." Margin="0,5,0,5"/>
                        <CheckBox Content="All item lots Guaranteed" IsChecked="{Binding AllLootGauranteed, Mode=TwoWay}" />
                        <TextBlock Text="Guarantee all loot drops.  Something will always drop" Margin="0,5,0,5"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="Item Lots">
                <StackPanel Margin="5">
                    <TextBlock Text="Drops Per Map Pickup" Margin="0,5,0,5"/>
                    <local:SliderWithTextUserControl Minimum="0" Maximum="5" Value="{Binding ItemLotsPerBaseMapLot, Mode=TwoWay}" TickFrequency="1" IsSnapToTickEnabled="True" />

                    <TextBlock Text="Drops Per Boss" Margin="0,5,0,5"/>
                    <local:SliderWithTextUserControl Minimum="0" Maximum="5" Value="{Binding ItemLotsPerBossLot, Mode=TwoWay}" TickFrequency="1" IsSnapToTickEnabled="True" />

                    <TextBlock Text="Drop chances per enemy (Number of consecutive item lots)" Margin="0,5,0,5"/>
                    <local:SliderWithTextUserControl Minimum="0" Maximum="5" Value="{Binding ItemLotsPerBaseEnemyLot, Mode=TwoWay}" TickFrequency="1" IsSnapToTickEnabled="True" />
                    
                    <TextBlock Text="Number of loot options per drop lot for enemies" Margin="0,5,0,5"/>
                    <local:SliderWithTextUserControl Minimum="1" Maximum="6" Value="{Binding LootPerItemLot_Enemy, Mode=TwoWay}" TickFrequency="1" IsSnapToTickEnabled="True" />

                </StackPanel>
            </GroupBox>
        </StackPanel>

        <!-- Right half for scanner settings -->
        <GroupBox Grid.Column="1" Header="Scanner Settings">
            <StackPanel Margin="5">
                <StackPanel>
                    <TextBlock Text="Enable or disable scanning and generating loot for opening chests." Margin="0,5,0,5"/>
                    <CheckBox Content="Scanning Enabled" IsChecked="{Binding ChestLootScannerSettings.Enabled, Mode=TwoWay}" />

                    <TextBlock Text="Percentage of chests to generate loot for." Margin="0,5,0,5"/>
                    <local:SliderWithTextUserControl 
                        DataContext="{Binding ChestLootScannerSettings}"
                        Minimum="0" 
                        Maximum="100" 
                        Value="{Binding ApplyPercent, Mode=TwoWay}" 
                        TickFrequency="1" 
                        IsSnapToTickEnabled="True"
                        IsEnabled="{Binding Enabled, Mode=OneWay}"/>
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="Enable or disable scanning and generating loot for map pickups." Margin="0,5,0,5"/>
                    <CheckBox Content="Enabled" IsChecked="{Binding MapLootScannerSettings.Enabled, Mode=TwoWay}" />

                    <TextBlock Text="Percentage of map pickups to generate loot for." Margin="0,5,0,5"/>
                    <local:SliderWithTextUserControl 
                        DataContext="{Binding MapLootScannerSettings}"
                        Minimum="0" 
                        Maximum="100" 
                        Value="{Binding ApplyPercent, Mode=TwoWay}" 
                        TickFrequency="1" 
                        IsSnapToTickEnabled="True"
                        IsEnabled="{Binding Enabled, Mode=OneWay}"/>
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="Enable or disable scanning and generating loot for enemy drops." Margin="0,5,0,5"/>
                    <CheckBox Content="Enabled" IsChecked="{Binding EnemyLootScannerSettings.Enabled, Mode=TwoWay}" />

                    <TextBlock Text="Percentage of enemies to generate loot for." Margin="0,5,0,5"/>
                    <local:SliderWithTextUserControl 
                        DataContext="{Binding EnemyLootScannerSettings}"
                        Minimum="0" 
                        Maximum="100" 
                        Value="{Binding ApplyPercent, Mode=TwoWay}" 
                        TickFrequency="1" 
                        IsSnapToTickEnabled="True"
                        IsEnabled="{Binding Enabled, Mode=OneWay}"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
    </Grid>
</UserControl>

